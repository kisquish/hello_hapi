#!/usr/bin/env groovy

pipeline {
    
    agent {
        docker {
            image 'nginx'
            image 'httpd'
        }
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
